{
  "pluginAlias": "TapoP100",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "description": "Plugin name as displaued in the Homrbridge log",
        "required": true,
        "default": "Tapo Smart Platform"
      },
      "username": {
        "title": "Username",
        "type": "string",
        "description": "The username you used to register/login to the Tapo app",
        "required": true,
        "default": ""
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "description": "The password you used to register/login to the Tapo app.",
        "default": ""
      },
      "devices": {
        "title": "Devices",
        "type": "array", 
        "description": "The ip adrresses and the names for your Tapo Devices",
        "items":{
          "title": "Device",
          "type": "object", 
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true,
              "examples": [
                "Standing Lamp"
            ]
            },
            "host": {
              "title": "IP",
              "type": "string",
              "required": true,
              "examples": [
                "192.168.1.3"
            ]
            },
            "type": {
              "title": "Colorlight, Light, Plug (with Power monitoring, use for P110) or Plug",
              "type": "string",
              "default": "plug",
              "oneOf": [
                { "title": "Plug", "enum": ["Plug"] },
                { "title": "Plug (with Power monitoring)", "enum": ["PowerPlug"] },
                { "title": "Light", "enum": ["Light"] },
                { "title": "Colorlight", "enum": ["Colorlight"] }
              ],
              "required": false
            }
          }
        }
      }
    }
  }
}