{
  "pluginAlias": "TapoP100",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "description": "Plugin name as displayed in the Homebridge log",
        "required": true,
        "default": "Tapo Smart Platform"
      },
      "username": {
        "title": "Username",
        "type": "string",
        "description": "The username you used to register/login to the Tapo app",
        "required": true,
        "default": ""
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "description": "The password you used to register/login to the Tapo app.",
        "default": ""
      },
      "devices": {
        "title": "Devices",
        "type": "array",
        "description": "The IP addresses and the names for your Tapo Devices",
        "items": {
          "title": "Device",
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true,
              "examples": [
                "Standing Lamp"
              ]
            },
            "host": {
              "title": "IP",
              "type": "string",
              "required": true,
              "examples": [
                "192.168.1.3"
              ]
            },
            "type": {
              "title": "P100, P110, L510 etc.",
              "type": "string",
              "default": "plug",
              "oneOf": [{
                  "title": "P100",
                  "enum": ["Plug"]
                },
                {
                  "title": "P110",
                  "enum": ["PowerPlug"]
                },
                {
                  "title": "L510",
                  "enum": ["Light"]
                },
                {
                  "title": "L520",
                  "enum": ["WhiteLight"]
                },
                {
                  "title": "L530",
                  "enum": ["Colorlight"]
                }
              ],
              "required": false
            },
            "updateInterval": {
              "title": "Interval in which the state of the Accessory should be updated (in seconds)",
              "type": "number",
              "default": "30",
              "required": false
            },
            "timeout": {
              "title": "Request Timeout for the request sent to the Accessory (in seconds)",
              "type": "number",
              "default": "2",
              "required": false
            }
          }
        }
      }
    }
  }
}
